{
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.venv": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.venv": true
    },
    "python.venvFolders": [
        ".venv"
    ],
    "python.autoComplete.extraPaths": [
        "${workspaceFolder}/src",
        // "src"
    ],

    "python.pythonPath": "./.venv/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintPath": "./.venv/bin/pylint",
    "editor.rulers": [79]
}